<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <UseWPF>true</UseWPF>
    <EnableDynamicLoading>true</EnableDynamicLoading>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="ImGuiNodeEditor\Detail\**" />
    <EmbeddedResource Remove="ImGuiNodeEditor\Detail\**" />
    <None Remove="ImGuiNodeEditor\Detail\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="GTranslate" Version="2.1.6" />
    <PackageReference Include="SharpPluginLoader.ImGui" Version="1.90.2" />
    <PackageReference Include="SharpPluginLoader.InternalCallGenerator" Version="1.1.2" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="SharpPluginLoader.Core.Debug">
      <HintPath>..\..\SharpPluginLoader\SharpPluginLoader.Core\bin\Debug\net8.0\SharpPluginLoader.Core.Debug.dll</HintPath>
    </Reference>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="python &quot;$(ProjectDir)cleanup.py&quot; $(TargetDir)" />
  </Target>

</Project>
